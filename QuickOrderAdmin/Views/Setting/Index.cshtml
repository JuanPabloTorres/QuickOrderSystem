
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center"><b>@QuickOrderAdmin.Utilities.SelectedStore.CurrentStore.StoreName</b></h1>





    @{
        void DisplayErroNotification()
        {
            NotificationScriptDisplay();
            <script>
                $(function () {
                    $('#notificationModal').modal();
                });
            </script>
        }

        void NotificationScriptDisplay()
        {
            <div class="modal fade" id="notificationModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Notification</h5>

                        </div>
                        <div class="modal-body">
                            <label class="text-center " style="text-decoration-color:red">@ViewBag.ErrorMsg.</label>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                            @*<button type="button" class="btn btn-primary">Save changes</button>*@
                        </div>
                    </div>
                </div>
            </div>
        }
    }


    @if (!String.IsNullOrEmpty(ViewBag.ErrorMsg))
    {
        DisplayErroNotification();
    }


<div class="container shadow " style="padding:20px">




    <h4>Settings</h4>
    <hr />
    <div class="row">



        <div class="col-lg">

            <a  class="btn btn-primary btn-block" asp-controller="Setting" asp-action="GoUpdateStoreInformation" asp-route-storeId="@QuickOrderAdmin.Utilities.SelectedStore.CurrentStore.StoreId.ToString()">Update Store Information</a>
            @*<a class="btn btn-block btn-primary"></a>*@

        </div>
        <div class="col-lg">

            <a class="btn btn-danger btn-block" asp-controller="Setting" asp-action="CancelSubcription" asp-route-CustomerId="@QuickOrderAdmin.Utilities.LogUser.LoginUser.StripeUserId"><b>Cancel Subcription</b></a>
            @*<a class="btn btn-block btn-primary"></a>*@

        </div>


    </div>


</div>

