@model Library.Models.Product

@{
    ViewData["Title"] = "DetailProdut";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Detail Produt @Model.ProductName</h1>

<div class="container align-middle">
    
    <div class="row">

        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">

            <div class="form-group">

            <img src="data:image;base64,@System.Convert.ToBase64String(Model.ProductImage)" width="100" height="100" class="rounded-circle align-middle" />
            </div>


          

            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control"  readonly/>
            
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" readonly/>
               
            </div>
            <div class="form-group">
                <label asp-for="InventoryQuantity" class="control-label"></label>
                <input asp-for="InventoryQuantity" class="form-control" readonly/>
              
            </div>
           
          

        </div>
       
    </div>
</div>
