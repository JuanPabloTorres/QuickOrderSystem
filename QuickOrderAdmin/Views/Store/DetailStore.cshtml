@model Library.Models.Store

@{
    ViewData["Title"] = "DetailStore";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col">
            <img src="data:image;base64,@System.Convert.ToBase64String(Model.StoreImage)" width="100" height="100" class="rounded-circle" />
        </div>
        <div class="col-sm">
            <h3 >@Model.StoreName</h3>
        </div>
        <div class="col">
            <div class="list-group list-group-horizontal">
                @Html.ActionLink("Add Product", "Partial", "Store", new { id = Model.ID, viewname = "Add" }, new { @class = "list-group-item list-group-item-action" })
                @Html.ActionLink("Orders", "Partial", "Store", new { id = Model.ID, viewname = "Orders" }, new { @class = "list-group-item list-group-item-action" })
                @Html.ActionLink("Employees", "Partial", "Store", new { id = Model.ID, viewname = "Employees" }, new { @class = "list-group-item list-group-item-action" })
               
            </div>
        </div>
    </div>
</div>

<div>

    @if (ViewBag.View != null && (string)ViewBag.View == "Add")
    {
    @Html.Partial((string)ViewBag.View ,new Library.Models.Product())

    }

</div>






