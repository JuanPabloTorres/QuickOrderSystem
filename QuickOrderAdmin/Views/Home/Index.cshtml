@model Library.Models.Store

@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row">
        <div class="col">
            <img src="data:image;base64,@System.Convert.ToBase64String(Model.StoreImage)" width="100" height="100" class="rounded-circle" />
        </div>
        <div class="col">
            <h3>@Model.StoreName</h3>
        </div>
        <div class="col">
            <div class="list-group list-group-horizontal">
                @Html.ActionLink("Add Product", "AddProductStore", "Store", new { id = Model.StoreId, viewname = "Add" }, new { @class = "list-group-item list-group-item-action" })
                @Html.ActionLink("Orders", "StoreOrders", "Store", new { id = Model.StoreId, viewname = "Orders" }, new { @class = "list-group-item list-group-item-action" })
                @Html.ActionLink("Employees", "Partial", "Store", new { id = Model.StoreId, viewname = "Employees" }, new { @class = "list-group-item list-group-item-action" })
                @Html.ActionLink("Store Location", "ShowMap", "Store", new { id = Model.StoreId, viewname = "Employees" }, new { @class = "list-group-item list-group-item-action" })
            </div>
        </div>
    </div>
</div>

