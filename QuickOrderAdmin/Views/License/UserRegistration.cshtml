@model QuickOrderAdmin.Models.UserViewModel

@{
    ViewData["Title"] = "UserRegistration";
    Layout = "~/Views/Shared/QuickOrderWeb.cshtml";
}


@if (!String.IsNullOrEmpty(ViewBag.ErrorMsg))
{
    <script>
                $(function () {
                    $('#notificationModal').modal();
                });
    </script>
}

<div class="modal fade" id="notificationModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Notification</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <label class="text-center " style="text-decoration-color:red">@ViewBag.ErrorMsg</label>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                @*<button type="button" class="btn btn-primary">Save changes</button>*@
            </div>
        </div>
    </div>
</div>


<div class="container">



    <h1 class="display-4 text-center">User Registration</h1>
    <p class="lead mb-0 text-center">Fill all informaton to register.</p>

    <hr />
    <div class="row">
        <div class="col-xl">
            <form asp-action="UserRegistration">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="container">
                    <div class="row">
                        <div class="col-xl">
                            <div class="form-group">
                                <label asp-for="Name" class="control-label"></label>
                                <input asp-for="Name" class="form-control" required/>
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-xl">
                            <div class="form-group">
                                <label asp-for="Email" class="control-label"></label>
                                <input asp-for="Email" class="form-control" required />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-xl">
                            <div class="col-xl">
                                <div class="form-group">
                                    <label asp-for="Phone" class="control-label"></label>
                                    <input asp-for="Phone" class="form-control" required/>
                                    <span asp-validation-for="Phone" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl">
                            <div class="form-group">
                                <label asp-for="Address" class="control-label"></label>
                                <input asp-for="Address" class="form-control" required/>
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                        </div>

                    </div>


                    <div class="row">
                        <div class="col-xl">
                            <div class="form-group">
                                <label asp-for="Username" class="control-label"></label>
                                <input asp-for="Username" class="form-control" required/>
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-xl">
                            <div class="form-group">
                                <label asp-for="Password" class="control-label"></label>
                                <input asp-for="Password" class="form-control" required/>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-xl">
                            <div class="form-group">
                                <label asp-for="ConfirmPassword" class="control-label"></label>
                                <input asp-for="ConfirmPassword" class="form-control" required/>
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="form-group">
                    <input type="submit" value="Complete" class="btn btn-primary btn-block" />
                </div>
            </form>
        </div>
    </div>
</div>




