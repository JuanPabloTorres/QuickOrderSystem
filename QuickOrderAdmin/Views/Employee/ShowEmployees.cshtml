@model IEnumerable<Library.Models.Employee>

@{
    ViewData["Title"] = "ShowEmployees";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">@QuickOrderAdmin.Utilities.SelectedStore.CurrentStore.StoreName Employees</h1>

<hr />

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeUser.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeUser.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            
            <td>
                @Html.ActionLink("Edit", "EditEmployee", new {  id=item.ID }) |
                @Html.ActionLink("Details", "DetailEmployee", new { id = item.ID }) |
                @Html.ActionLink("Delete", "DeleteEmployee", new { id = item.ID })
            </td>
        </tr>
}
    </tbody>
</table>
