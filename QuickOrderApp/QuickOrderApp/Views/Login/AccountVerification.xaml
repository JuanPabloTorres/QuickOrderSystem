<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
	x:Class="QuickOrderApp.Views.Login.AccountVerification"
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:ck="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
	xmlns:input="clr-namespace:Syncfusion.XForms.TextInputLayout;assembly=Syncfusion.Core.XForms"
	xmlns:rainbow="clr-namespace:Xamarin.Forms.DebugRainbows;assembly=Xamarin.Forms.DebugRainbows"
	xmlns:sfbtn="clr-namespace:Syncfusion.XForms.Buttons;assembly=Syncfusion.Buttons.XForms"
	xmlns:vm="QuickOrderApp.ViewModels.LoginVM.VerifyAccountViewModel"
	rainbow:DebugRainbow.IsDebug="True"
	rainbow:DebugRainbow.ShowColors="false"
	x:DataType="vm:VerifyAccountViewModel">
	<ContentPage.Content>
		<AbsoluteLayout>
			<ck:PancakeView
				AbsoluteLayout.LayoutBounds=".5,.5,.9,.6"
				AbsoluteLayout.LayoutFlags="All"
				CornerRadius="5"
				HasShadow="True">
				<StackLayout>
					<input:SfTextInputLayout Hint="Verification Code" IsHintAlwaysFloated="True">
						<Entry x:Name="codeEntry" Text="{Binding Code}" />
					</input:SfTextInputLayout>
					<sfbtn:SfButton
						Command="{Binding VerifyCodeCommand}"
						CommandParameter="{Binding Source={x:Reference codeEntry}, Path=Text}}"
						CornerRadius="5"
						Text="Verify Code" />
				</StackLayout>
			</ck:PancakeView>
		</AbsoluteLayout>
	</ContentPage.Content>
</ContentPage>