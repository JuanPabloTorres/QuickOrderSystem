            <StackLayout Grid.Row="2">
                <Label FontSize="Body" Text="About Us" />
                <BoxView
                    BackgroundColor="Black"
                    HeightRequest="0.1"
                    HorizontalOptions="Fill" />
                <button:SfButton
                    BackgroundColor="DodgerBlue"
                    Command="{Binding GoUserInformationCommand}"
                    HorizontalTextAlignment="Center"
                    Text="Policies"
                    TextColor="Black" />
                <button:SfButton
                    BackgroundColor="DodgerBlue"
                    Command="{Binding GoUserInformationCommand}"
                    HorizontalTextAlignment="Center"
                    Text="Terms And Conditions"
                    TextColor="Black" />


            </StackLayout>
            <StackLayout Grid.Row="3">
                <Label FontSize="Body" Text="Sing Out" />
                <BoxView
                    BackgroundColor="Black"
                    HeightRequest="0.1"
                    HorizontalOptions="Fill" />
                <button:SfButton
                    BackgroundColor="DodgerBlue"
                    Command="{Binding LogOutCommand}"
                    HorizontalTextAlignment="Center"
                    Text="Sign Out"
                    TextColor="Black" />

            </StackLayout>

        </Grid>


    </ContentPage.Content>
