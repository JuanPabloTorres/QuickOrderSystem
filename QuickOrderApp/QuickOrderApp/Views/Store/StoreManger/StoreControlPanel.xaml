<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="QuickOrderApp.Views.Store.StoreManger.StoreControlPanel"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:button="clr-namespace:Syncfusion.XForms.Buttons;assembly=Syncfusion.Buttons.XForms"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Store Control Panel"
    Routing.Route="StoreControlPanelRoute"
    mc:Ignorable="d">
    <ContentPage.Content>


        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <!--<RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>-->
            </Grid.RowDefinitions>
            <Frame
                Grid.Row="0"
                Padding="0"
                HeightRequest="150"
                HorizontalOptions="Fill"
                IsClippedToBounds="True">

                <Image Aspect="Fill" Source="{Binding Store.StoreImage, Converter={StaticResource BytesToImgConverter}}" />
            </Frame>
            <Label
                Grid.Row="1"
                FontSize="Title"
                HorizontalOptions="Center"
                Text="{Binding Store.StoreName}"
                TextColor="Black" />
            <BoxView
                Grid.Row="2"
                BackgroundColor="Black"
                HeightRequest="0.1"
                HorizontalOptions="Fill" />

            <StackLayout Grid.Row="3" VerticalOptions="Center">

                <button:SfButton
                    Grid.Row="3"
                    Margin="3"
                    BackgroundColor="DodgerBlue"
                    Command="{Binding GoInventory}"
                    CornerRadius="5"
                    FontAttributes="Bold"
                    HasShadow="True"
                    Text="Inventory" />
                <button:SfButton
                    Grid.Row="4"
                    Margin="3"
                    BackgroundColor="DodgerBlue"
                    Command="{Binding GoAddProduct}"
                    CornerRadius="5"
                    FontAttributes="Bold"
                    HasShadow="True"
                    Text="Add Product" />
                <button:SfButton
                    Grid.Row="5"
                    Margin="3"
                    BackgroundColor="DodgerBlue"
                    Command="{Binding GoOrdersCommand}"
                    CornerRadius="5"
                    FontAttributes="Bold"
                    HasShadow="True"
                    Text="Orders" />
                <button:SfButton
                    Grid.Row="6"
                    Margin="3"
                    BackgroundColor="DodgerBlue"
                    Command="{Binding GoEmployeesCommand}"
                    CornerRadius="5"
                    FontAttributes="Bold"
                    HasShadow="True"
                    Text="Employees" />
                <button:SfButton
                    Grid.Row="7"
                    Margin="3"
                    BackgroundColor="DodgerBlue"
                    Command="{Binding GoSearchEmployeeCommand}"
                    CornerRadius="5"
                    FontAttributes="Bold"
                    HasShadow="True"
                    Text="Search Employee" />
            </StackLayout>
        </Grid>


    </ContentPage.Content>
</ContentPage>