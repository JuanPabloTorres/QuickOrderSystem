<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="QuickOrderApp.Views.Store.StoreOrders"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:button="clr-namespace:Syncfusion.XForms.Buttons;assembly=Syncfusion.Buttons.XForms"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Orders Control"
    BackgroundColor="{x:StaticResource BackgroundColor}"
    Routing.Route="StoreOrderRoute"
    Shell.BackgroundColor="{x:StaticResource BackgroundColor}"
    Shell.TabBarForegroundColor="Orange"
    Shell.TabBarTitleColor="Black"
    Shell.TitleColor="Black"
    mc:Ignorable="d">
    <ContentPage.Content>
        <Grid Margin="10">

            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <button:SfButton
                Grid.Row="0"
                Margin="10,0,10,0"
                BackgroundColor="LimeGreen"
                Command="{Binding GetOrdersCommand}"
                CommandParameter="Submited"
                CornerRadius="5"
                FontAttributes="Bold"
                FontFamily="RobotoBold"
                FontSize="Title"
                HasShadow="True"
                Text="Orders Subtmited"
                TextColor="#2F3538" />
            <button:SfButton
                Grid.Row="1"
                Margin="10,0,10,0"
                BackgroundColor="DodgerBlue"
                Command="{Binding GetOrdersCommand}"
                CommandParameter="NotSubmited"
                CornerRadius="5"
                FontAttributes="Bold"
                FontFamily="RobotoBold"
                FontSize="Title"
                HasShadow="True"
                Text="Orders Not Submited"
                TextColor="#2F3538" />
            <button:SfButton
                Grid.Row="2"
                Margin="10,0,10,0"
                BackgroundColor="Tomato"
                Command="{Binding GetOrdersCommand}"
                CommandParameter="Completed"
                CornerRadius="5"
                FontAttributes="Bold"
                FontFamily="RobotoBold"
                FontSize="Title"
                HasShadow="True"
                Text="Orders Completed"
                TextColor="#2F3538" />
        </Grid>
    </ContentPage.Content>
</ContentPage>