<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
xmlns:numericupdown="clr-namespace:Syncfusion.SfNumericUpDown.XForms;assembly=Syncfusion.SfNumericUpDown.XForms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:button="clr-namespace:Syncfusion.XForms.Buttons;assembly=Syncfusion.Buttons.XForms"
             mc:Ignorable="d"
             Routing.Route="ProductRoute"
             Title="{Binding StoreName}"
             BackgroundImageSource="Background.jpg"
             x:Class="QuickOrderApp.Views.Store.Products">
    <ListView
      ItemsSource="{Binding StoreProducts}"
            ItemTapped="Handle_ItemTapped"
      HasUnevenRows="True"
            CachingStrategy="RecycleElement">

        <!--Built in Cells-->
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <Frame Padding="3" Margin="8" HasShadow="True">
                        
                    <StackLayout >
                        <Image Source="{Binding ProductImg,Converter={StaticResource BytesToImgConverter}}" Aspect="Fill" HeightRequest="200"/>
                        <Label Text="{Binding ProductName}" FontSize="Title"></Label>
                        <Label Text="{Binding ProductPrice,StringFormat='{0:C}'}" FontSize="Body"></Label>
                        <StackLayout>
                            <numericupdown:SfNumericUpDown Value="{Binding Quantity}"  SpinButtonAlignment="Both" MaximumDecimalDigits="0"/>
                        </StackLayout>
                            <button:SfButton Text="Add To Cart" Command="{Binding AddToCartCommand}" CornerRadius="5" BackgroundColor="LightGray" FontAttributes="Bold" TextColor="Black" HasShadow="True"/>
                            <!--<Button Text="Show" Command="{Binding AddToCartCommand}"/>-->
                    </StackLayout>
                    </Frame>

                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>

        <!--Custom View Cells-->
        <!--
    <ListView.ItemTemplate>
      <DataTemplate>
        <ViewCell>
          <StackLayout>
            <Label Text="{Binding Text}" 
                   d:Text="{Binding .}"
                   Style="{DynamicResource ListItemTextStyle}" />
            <Label Text="{Binding Detail}" 
                   d:Text="Detail"
                   Style="{DynamicResource ListItemDetailTextStyle}"/>
          </StackLayout>
        </ViewCell>
      </DataTemplate>
    </ListView.ItemTemplate>
    -->
    </ListView>
</ContentPage>
